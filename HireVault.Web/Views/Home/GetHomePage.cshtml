@{
    ViewData["Title"] = "HireVault - HR Document Verification Portal";
    Layout = "_Layout";
}

<div class="homepage">

    <!-- HERO SECTION -->
    <section class="hero-section">
        <div class="hero-content">
            <h1>HR Document Verification Portal</h1>
            <p>
                Securely verify candidate documents, streamline hiring workflows,
                and manage HR operations with confidence.
            </p>

            <div class="hero-actions">
                <a asp-controller="Dashboard"
                   asp-action="GetAllCandidates"
                   class="btn-primary">
                    View Candidates
                </a>

                <a asp-controller="Dashboard"
                   asp-action="Index"
                   class="btn-secondary">
                    Shortlist Candidates
                </a>
            </div>
        </div>

        <div class="hero-image">
            <img src="~/images/HireVaultHeroImage.png"
                 alt="HireVault HR document verification illustration" />
        </div>
    </section>

    <!-- STATS SECTION -->
    <section class="stats-section">
        <div class="stat">
            <h2>100%</h2>
            <p>Secure Verification</p>
        </div>
        <div class="stat">
            <h2>24/7</h2>
            <p>Availability</p>
        </div>
        <div class="stat">
            <h2>99.9%</h2>
            <p>System Uptime</p>
        </div>
    </section>

    <!-- FEATURES SECTION -->
    <section class="features-section">
        <h2>Why Choose HireVault?</h2>
        <p class="features-subtitle">
            Designed for modern HR teams and enterprises
        </p>

        <div class="features-grid">
            <div class="feature-card">
                <h3>Document Validation</h3>
                <p>
                    Validate identity proofs, educational certificates,
                    and employment documents securely.
                </p>
            </div>

            <div class="feature-card">
                <h3>Secure Storage</h3>
                <p>
                    All candidate documents are encrypted and stored
                    using enterprise-grade security standards.
                </p>
            </div>

            <div class="feature-card">
                <h3>Smart Tracking</h3>
                <p>
                    Track verification status, approvals, and candidate
                    progress in real time.
                </p>
            </div>
        </div>
    </section>

</div>

@section Styles {
    <style>
        /* GENERAL */
        .homepage {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            color: #1f2937;
        }

        /* HERO */
        .hero-section {
            min-height: 90vh;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 8%;
            background: linear-gradient(135deg, #eef2ff, #f8f9ff);
        }

        .hero-content {
            max-width: 540px;
        }

            .hero-content h1 {
                font-size: 3rem;
                font-weight: 700;
                margin-bottom: 16px;
            }

            .hero-content p {
                font-size: 1.1rem;
                color: #6b7280;
                margin-bottom: 32px;
            }

        .hero-actions {
            display: flex;
            gap: 16px;
        }

        .btn-primary {
            padding: 12px 28px;
            background: linear-gradient(90deg, #6366f1, #8b5cf6);
            color: white;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
        }

        .btn-secondary {
            padding: 12px 28px;
            border: 2px solid #6366f1;
            color: #6366f1;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            background: transparent;
        }

        .hero-image {
            flex: 1;
            display: flex;
            justify-content: flex-end;
        }

            .hero-image img {
                max-width: 95%;
                height: auto;
                object-fit: contain;
            }

        /* STATS */
        .stats-section {
            display: flex;
            justify-content: space-around;
            padding: 80px 10%;
            background: #ffffff;
            text-align: center;
        }

        .stat h2 {
            font-size: 3rem;
            color: #6366f1;
            margin-bottom: 8px;
        }

        .stat p {
            color: #6b7280;
            font-size: 1rem;
        }

        /* FEATURES */
        .features-section {
            padding: 100px 10%;
            background: #f9fafb;
            text-align: center;
        }

            .features-section h2 {
                font-size: 2.5rem;
                margin-bottom: 12px;
            }

        .features-subtitle {
            color: #6b7280;
            margin-bottom: 60px;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 32px;
        }

        .feature-card {
            background: white;
            padding: 32px;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            transition: transform 0.3s ease;
        }

            .feature-card:hover {
                transform: translateY(-8px);
            }

            .feature-card h3 {
                margin-bottom: 12px;
                font-size: 1.25rem;
            }

            .feature-card p {
                color: #6b7280;
                font-size: 0.95rem;
            }

        /* RESPONSIVE */
        @@media (max-width: 900px) {
            .hero-section {
                flex-direction: column;
                text-align: center;
                padding-top: 80px;
            }

            .hero-actions {
                justify-content: center;
            }

            .hero-image {
                margin-top: 40px;
                justify-content: center;
            }

            .features-grid {
                grid-template-columns: 1fr;
            }

            .stats-section {
                flex-direction: column;
                gap: 40px;
            }
        }
    </style>
}
