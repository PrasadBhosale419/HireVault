@model HireVault.Core.ViewModels.DocumentUploadViewModel

@{
    ViewData["Title"] = "Upload Document";
    var candidateId = ViewBag.CandidateId as string;
}

<div class="container mt-4">
    <h2>Upload Document</h2>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <form asp-action="UploadDocument" asp-route-candidateId="@candidateId" method="post" enctype="multipart/form-data" id="uploadForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="DocumentType" class="control-label"></label>
                    <select asp-for="DocumentType" class="form-control" asp-items="Html.GetEnumSelectList<HireVault.Core.Entities.DocumentType>()">
                        <option value="">-- Select Document Type --</option>
                    </select>
                    <span asp-validation-for="DocumentType" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label class="form-label">Document File</label>
                    <input type="file" class="form-control" id="fileInput" name="File" required>
                    <div class="invalid-feedback">Please select a file to upload.</div>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Upload</button>
                    <a asp-controller="Candidates" asp-action="Details" asp-route-id="@candidateId" class="btn btn-secondary">Back to Candidate</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Form validation
        (function () {
            'use strict'
            
            // Fetch the form element
            const form = document.getElementById('uploadForm');
            const fileInput = document.getElementById('fileInput');
            
            // Add event listener for form submission
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                
                form.classList.add('was-validated');
            }, false);
            
            // Show file name when selected
            fileInput.addEventListener('change', function(e) {
                const fileName = e.target.files[0]?.name || 'Choose file';
                const label = this.nextElementSibling;
                if (label && label.nodeName === 'LABEL') {
                    label.textContent = fileName;
                }
            });
        })();
    </script>
}
