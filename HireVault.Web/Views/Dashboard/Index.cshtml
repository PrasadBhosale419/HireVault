@{
    ViewData["Title"] = "Dashboard - HireVault";
    Layout = "_Layout";
}

<div class="container-fluid">

    <!-- Hero Section -->
    <div class="row align-items-center hero-section py-5">
        <div class="col-lg-8">
            <h1 class="display-5 fw-bold mb-3">Candidate Shortlisting Dashboard</h1>
            <p class="lead mb-4">
                Review, verify, and shortlist candidates efficiently from one place.
            </p>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="row stats-section py-5 my-5">
        <div class="col-md-4 text-center mb-4 mb-md-0">
            <h2 class="display-4 fw-bold text-primary">120</h2>
            <p class="lead">Total Candidates</p>
        </div>
        <div class="col-md-4 text-center mb-4 mb-md-0">
            <h2 class="display-4 fw-bold text-primary">45</h2>
            <p class="lead">Verified</p>
        </div>
        <div class="col-md-4 text-center">
            <h2 class="display-4 fw-bold text-primary">18</h2>
            <p class="lead">Shortlisted</p>
        </div>
    </div>

    <!-- Actions Section -->
    <div class="row py-5 my-5">
        <div class="col-12 text-center mb-5">
            <h2 class="fw-bold">Dashboard Actions</h2>
            <p class="lead text-muted">Manage candidate verification workflow</p>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4 text-center">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-people text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h4 class="h5 fw-bold">View Candidates</h4>
                    <p class="text-muted">Browse all registered candidates.</p>
                    <a asp-controller="Dashboard" asp-action="GetAllCandidates" class="btn btn-outline-primary">
                        View
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4 text-center">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-file-earmark-check text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h4 class="h5 fw-bold">Verify Documents</h4>
                    <p class="text-muted">Check uploaded documents.</p>
                    <a asp-controller="Document" asp-action="Index" class="btn btn-outline-primary">
                        Verify
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4 text-center">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-check-circle text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h4 class="h5 fw-bold">Shortlist</h4>
                    <p class="text-muted">Finalize shortlisted candidates.</p>
                    <a asp-controller="Dashboard"
                       asp-action="Shortlist"
                       class="btn btn-outline-primary">
                        Shortlist
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .hero-section {
            min-height: 40vh;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 0.5rem;
            margin-top: 1rem;
        }

        .stats-section {
            background-color: #f8f9fa;
            border-radius: 0.5rem;
        }

        .feature-icon {
            width: 60px;
            height: 60px;
            background-color: rgba(13, 110, 253, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 0.75rem;
            border: 1px solid rgba(0,0,0,0.05);
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1);
            }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const elements = document.querySelectorAll('.card, .stats-section h2');

            elements.forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'all 0.6s ease-out';
            });

            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, { threshold: 0.1 });

            elements.forEach(el => observer.observe(el));
        });
    </script>
}
